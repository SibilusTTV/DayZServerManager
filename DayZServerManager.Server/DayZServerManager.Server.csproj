<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>d43fdda7-712b-4129-a178-4006a36e1098</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <SpaRoot>..\dayzservermanager.client</SpaRoot>
    <SpaProxyLaunchCommand>npm run dev</SpaProxyLaunchCommand>
    <SpaProxyServerUrl>https://localhost:5173</SpaProxyServerUrl>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="BEC\**" />
    <Compile Remove="Mods\**" />
    <Compile Remove="Server\**" />
    <Compile Remove="SteamCMD\**" />
    <Content Remove="BEC\**" />
    <Content Remove="Mods\**" />
    <Content Remove="Server\**" />
    <Content Remove="SteamCMD\**" />
    <EmbeddedResource Remove="BEC\**" />
    <EmbeddedResource Remove="Mods\**" />
    <EmbeddedResource Remove="Server\**" />
    <EmbeddedResource Remove="SteamCMD\**" />
    <None Remove="BEC\**" />
    <None Remove="Mods\**" />
    <None Remove="Server\**" />
    <None Remove="SteamCMD\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Config.json" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="steamcmd.tar" />
    <None Remove="steamcmd.tar.gz" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LibGit2Sharp" Version="0.30.0" />
    <PackageReference Include="Microsoft.AspNetCore.SpaProxy">
      <Version>8.*-*</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.20.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\dayzservermanager.client\dayzservermanager.client.esproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

</Project>
